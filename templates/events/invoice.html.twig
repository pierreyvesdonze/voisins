{% extends "base.html.twig" %}
{% block body %}

	<div class="container">

		<div class="card-header">
			<h5 class="card-title">Facture pour :
				{{ event.title }}
			</h5>
		</div>

		<div class="container-invoice">
			<img src="{{ asset('uploads/images/' ~ event.brochureFilename) }}">
		</div>

		<div class="control">
			<a href="{{ path('event_view',{'id': event.id}) }}">
				<img src="{{ asset('assets/images/back-to.png') }}" alt="back" class="button-icon">
			</a>
		</div>
	</div>

{% endblock %}
