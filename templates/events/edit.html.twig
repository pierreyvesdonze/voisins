{% extends 'base.html.twig' %}

{% block title %}Éditer l'événement
{% endblock %}

{% block body %}

	<div class="card">
		<div class="event-body-edit">

			<div class="my-form-control">
				<h2>Éditer</h2>
				{{ form_start(form) }}

				<div class="errors">
					{{ form_errors(form) }}
				</div>

				<div class="row">
					<div class="col">
						{{ form_row(form.title) }}
					</div>
					<div class="col">
						{{ form_row(form.lieu) }}
					</div>
				</div>
				<div class="row row-datetime">
					<div class="col">
						{{ form_row(form.date) }}
					</div>

				</div>

			</div>
		</div>
		<div class="row">
			<div class="col">
				{{ form_row(form.type) }}
			</div>
		</div>
		<div class="row">
			{{ form_widget(form.text) }}
		</div>
		<div class="row invoice-field">
			{{ form_widget(form.brochure) }}
		</div>
	</div>

	<div class="control">
		<div class="col">
			<a href="{{ path('event_view',{'id': event.id}) }}" class="button">
				<span class="backto"></span>
			</a>
		</div>
		<div class="col">
			{{ form_widget(form.save) }}</div>
		<div class="col">
			<a href="{{ path('event_delete',{'id': event.id}) }}" class="button" onclick="return confirm('Supprimer ?')">
				<span class="deletebutton"></span>
			</a>
		</div>
	</div>
	{{ form_end(form) }}
{% endblock %}
{% block javascripts %}
	{{parent()}}<script>
		$('#datetimepicker1').datepicker({format: 'dd.MM.yyyy'});
	</script>
{% endblock %}
