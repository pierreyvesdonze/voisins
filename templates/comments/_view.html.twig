{% block body %}

	<div class="comment-modal"></div>

	<!-- Modal -->
	<div class="modal fade" id="modal-comment" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
		<div class="modal-dialog modal-dialog-scrollable" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalScrollableTitle">Commentaires</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">

					{% for comment in comments %}
						<div class="comment-container">
							<div class="comment">
								<span>{{ comment.user }}</span>
								<br>
								<p>{{ comment.comment }}</p>
							</div>

							<div class="comment-control">
								{% if is_granted('ROLE_USER') %}
									<a href="{{ path('comment_update',{'id': comment.id}) }}">
										<img src="{{ asset('assets/images/update-white.png') }}" alt="update-white" class="button-icon">
									</a>
									<a href="{{ path('comment_delete',{'id': comment.id}) }}">
										<img src="{{ asset('assets/images/delete.png') }}" alt="update" class="button-icon">
									</a>
								{% endif %}
							</div>
						</div>
						<hr>
					{% endfor %}
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
