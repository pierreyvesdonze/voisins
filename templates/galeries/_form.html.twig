{{ form_start(form) }}
    {{ form_widget(form) }}

	{% if app.request.attributes.get('_route') == 'gallery_update' %}
        <h2>Images</h2>
        {% for photo in gallery.photos %}
            <div>
                <img src="{{ asset('uploads/images/'~ photo.title) }}" alt="" width="150">

                {# On ajoute un lien permettant de supprimer une image (sera géré en Ajax) #}
                <a href="{{ path('gallery_delete', {id: photo.id})}}" data-delete data-token="{{ csrf_token('delete' ~ photo.id )}}">Supprimer</a>
            </div>
        {% endfor %}
    {% endif %}
    <button class="buttonn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}