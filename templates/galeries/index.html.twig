{% extends 'base.html.twig' %}

{% block title %}Galeries index
{% endblock %}

{% block body %}
	<h1>Galeries index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom de la galerie</th>
				<th>Propriétaire</th>
				<th>Voir la galerie</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for gal in gallery %}
				{% set galleryTitle = gal.title|split('.') %}
				<tr>
					<td>{{ galleryTitle[0] }}</td>
					<td>{{ gal.user }}</td>
					<td>
						<a href="{{ path('gallery_show', {'id': gal.id}) }}">Voir</a>
					</td>
					<td>
						<a href="{{ path('gallery_update', {'id': gal.id}) }}">Éditer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucune galerie pour le moment</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

		<a href="{{ path('gallery_create') }}" class="button">
			<span class="add"></span>
		</a>

{% endblock %}
