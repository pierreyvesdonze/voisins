{% extends 'base.html.twig' %}

{% block title %}Galeries index
{% endblock %}

{% block body %}
	<h1>Galeries index</h1>
	<div class="card">
		<div class="event-body">

			<table class="table">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Proprio</th>
						<th>Voir</th>
					</tr>
				</thead>
				<tbody>
					{% for gal in gallery %}
						{% set galleryTitle = gal.title|split('.') %}
						<tr>
							<td>{{ galleryTitle[0] }}</td>
							<td>{{ gal.user }}</td>
							<td>
								<a href="{{ path('gallery_show', {'id': gal.id}) }}" class="button">
									<span class="go"></span>
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Aucune galerie pour le moment</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="control">
			<a href="{{ path('gallery_create') }}" class="button">
				<span class="add"></span>
			</a>
		</div>
	</div>
{% endblock %}
