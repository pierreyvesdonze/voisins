<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		{% block stylesheets %}
			<link rel="stylesheet" href="https://bootswatch.com/4/darkly/bootstrap.min.css">
			<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
		{% endblock %}

		<title>
			{% block title %}
				Voisins
			{% endblock %}
		</title>
	</head>


	<!--***************************
			BODY
		****************************-->

	<body>
		<nav class="navbar navbar-expand-lg">
			<a class="navbar-brand" href="{{ path("homepage") }}">Voisins</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">


					<ul class="navbar-nav nav-registration">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('event_list') }}">Liste</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('event_create') }}">Ajouter</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('new') }}">Inscription</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
							</li>
						{% endif %}
					</ul>

				</div>
			</nav>
			{% block body %}{% endblock %}

			<script src="{{ asset('assets/js/app.js') }}"></script>

			<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

			{% block javascripts %}{% endblock %}
		</body>


		<!--***************************
			FOOTER
			****************************-->

		<div
			class="footer"><!--&copy; Pierre-Yves DonzÃ© - 2020-->
		</div>

		{% block footer %}{% endblock %}
	</body>
</html>
