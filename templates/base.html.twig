<!--***************************HEAD****************************-->

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		{% block stylesheets %}

			<link rel="icon" type="image/png" href="{{ asset('assets/images/favicon.png') }}">

			<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,900;1,100&display=swap" rel="stylesheet">

			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css"/>

			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">

			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

			<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">

			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

		{% endblock %}

		<title>
			{% block title %}
				Voisins
			{% endblock %}
		</title>
	</head>


	<!--***************************NAV****************************-->

	<body class="pane">
		<nav class="navbar navbar-expand-lg">
			<div class="button-group">
				<div class="black-navbar iconHome">
					<a href="{{ path('homepage') }}">
						{{ source('svg/home.svg') }}
					</a>
				</div>

				<div class="black-navbar iconList">
					<a href="{{ path('event_list') }}">
						{{ source('svg/lists.svg') }}
					</a>
				</div>

				{% if app.user %}

					<div class="black-navbar iconAdd">
						<a href="{{ path('event_create') }}">
							{{ source('svg/add.svg') }}
						</a>
					</div>

					<div class="black-navbar iconAdd">
						<a href="{{ path('gallery_create') }}">
							gallery
						</a>
					</div>

					<div class="black-navbar iconUser">
						<a href="{{ path('user_profile') }}">
							{{ source('svg/user.svg') }}
						</a>
					</div>

					<div class="black-navbar iconLogout">
						<a href="{{ path('app_logout') }}">
							{{ source('svg/logout.svg') }}
						</a>
					</div>

				{% else %}

					<div class="black-navbar iconNewUser">
						<a href="{{ path('new') }}">
							{{ source('svg/newuser.svg') }}
						</a>
					</div>

					<div class="black-navbar iconLogout">
						<a href="{{ path('app_login') }}">
							{{ source('svg/logout.svg') }}
						</a>
					</div>

				{% endif %}

			</div>
			{{ source('svg/svgfilters.svg') }}
		</nav>

		<div class="flash-container">
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<button class="close" data-dismiss="alert">&times;</button>
					<div class="alert alert-{{ label }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
		</div>
		{% block body %}{% endblock %}

		<!--***************************FOOTER****************************-->

		{% block footer %}{% endblock %}

		<script src="{{ asset('assets/js/functions.js') }}"></script>
		<script src="{{ asset('assets/js/app.js') }}"></script>
		<script src="{{ asset('assets/js/photos.js') }}"></script>

		<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js"></script>

		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js"></script>

		<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>

		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

	</body>
</html>
